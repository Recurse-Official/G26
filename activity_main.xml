<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E9CF">

    <!-- Top Section: Title and Icon -->
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <!-- Middle Section: Heading -->
    <TextView
        android:id="@+id/loginHeading"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:layout_centerHorizontal="true"
        android:text="BALANCE YOUR BUCKS"
        android:textColor="#663300"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Middle Section: Description -->

    <!-- Bottom Navigation Bar -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="418dp"
        android:layout_below="@+id/loginHeading"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="51dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="Hello!\nLetâ€™s unlock\nyour financial\npotential."
        android:textColor="#000000"
        android:textSize="50sp"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#663300"
        android:orientation="horizontal">

        <!-- Transactions -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/analysis"
                android:contentDescription="Transactions icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Savings -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/saving"
                android:contentDescription="Savings icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Savings"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Virtual Pet -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/virtualpet"
                android:contentDescription="Virtual pet icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Virtual Pet"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/Profile"
                android:contentDescription="Profile icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
